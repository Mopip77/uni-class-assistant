.on-top {
  position: fixed;
  z-index: 9988;
}
.header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.header image {
    height: 72rpx;
    width: 72rpx;
}
.header .user-info {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    margin-left: 10rpx;
}
.header .user-info .creator-name {
      font-size: 30rpx;
}
.header .user-info .create-time {
      font-size: 20rpx;
      color: gray;
}
.header .like-count {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    margin-left: auto;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    margin-right: 20rpx;
}
.header .like-count text {
      font-size: 22rpx;
}
.topic-box {
  background-color: white;
  padding: 10rpx;
  border-radius: 0 0 24rpx 24rpx;
}
.topic-box .topic-body {
    margin-top: 14rpx;
    margin-bottom: 20rpx;
}
.topic-box .topic-body .title {
      font-weight: 500;
}
.topic-box .topic-body .content {
      font-size: 26rpx;
      margin-top: 14rpx;
      max-width: 98%;
      word-break: break-all;
}
.comment-box {
  margin-top: 35rpx;
}
.comment-box .comment-item {
    border-bottom: 0.5px solid #BDBDBD;
    padding: 10rpx 10rpx 14rpx 10rpx;
    margin-bottom: 10rpx;
    background-color: white;
}
.comment-box .comment-item .comment-body {
      padding: 12rpx 0 0 4rpx;
      font-size: 30rpx;
      max-width: 98%;
      word-break: break-all;
}
.comment-box .comment-item .sub-comment {
      font-size: 26rpx;
      color: gray;
      margin-left: 6rpx;
}
.dock-row-box {
  height: 80rpx;
}
.dock-row-box .dock-row {
    position: fixed;
    bottom: 0;
    width: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    padding: 8rpx 4rpx;
    background-color: white;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    box-shadow: -1rpx -1rpx .8rpx #9E9E9E;
}
.dock-row-box .dock-row .input-column {
      font-size: 30rpx;
      width: 80%;
      line-height: 1.5rem;
      background-color: #E0E0E0;
      border-radius: 25rpx;
      padding: 2rpx 25rpx;
      color: #616161;
}
.dock-row-box .dock-row .favorite-column {
      font-size: 40rpx;
      margin-right: 28rpx;
      padding-top: 5rpx;
}

